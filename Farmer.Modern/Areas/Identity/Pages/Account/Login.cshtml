@page
@model LoginModel
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Farmer.Modern.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "ورود به سامانه";
}

<body class="login">
<div>

    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form id="account" method="post" class="py-5">
                    <h1>فرم ورود</h1>
                    <div class="d-flex justify-content-center">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div>

                        <input asp-for="Input.Username" class="form-control" placeholder="نام کاربری" required autofocus/>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>

                    </div>
                    <div>
                        <input asp-for="Input.Password" class="form-control" placeholder="رمز ورود" required/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default submit">ورود</button>
                    </div>

                    <div class="clearfix"></div>


                </form>
            </section>
        </div>

    </div>
</div>


</body>


