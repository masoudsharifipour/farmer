@model Farmer.Modern.Models.Product

@{
    ViewData["Title"] = "ثبت";
}

<div class="clearfix"></div>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    محصول جدید
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form asp-action="Create" class="form-horizontal form-label-left">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">نام </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Name" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label col-md-3 col-sm-3 col-xs-12">توضیحات </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Description" class="form-control col-md-7 col-xs-12">
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">بازگشت به لیست</a>
        </div>
    </div>
</div>

