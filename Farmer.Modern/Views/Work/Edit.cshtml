@model Farmer.Modern.Dto.WorkDto

@{
    ViewData["Title"] = "ویرایش";
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    ثبت عملیات جدید
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form asp-action="Edit" class="form-horizontal form-label-left">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label asp-for="GardenId" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("GardenId", ViewBag.Garden as SelectList, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="GardenId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("status", ViewBag.Status as SelectList, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WaterMotorId" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("WaterMotorId", ViewBag.Motor as SelectList, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="WaterMotorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("ProductId", ViewBag.Product as SelectList, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("CategoryId", ViewBag.Category as SelectList, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Agent" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("Agent", ViewBag.Agent as SelectList, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="Agent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ActionDateTime" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="ActionDateTime" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="ActionDateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Size" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Size" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Type" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Description" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndActionDateTime" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="EndActionDateTime" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="EndActionDateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-primary"/>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-dark" asp-action="Index">بازگشت</a>
</div>
