@model Farmer.Modern.Dto.ApplicationUserInputEditDto

@{
    ViewBag.Title = "ویرایش";
    Layout = "_Layout";
}

<div class="clearfix"></div>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    ویرایش
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form asp-action="Edit" class="form-horizontal form-label-left">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label asp-for="Roles" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("Roles", ViewBag.Roles as SelectList, new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            نام
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="Name" id="name" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="lastName">
                            نام خانوادگی
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="LastName" id="lastName" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="password">
                            کلمه عبور
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="password" asp-for="Password" id="password" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Address">
                            آدرس
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="Address" id="Address" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="phoneNumber">
                            موبایل
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="PhoneNumber" id="phoneNumber" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">بازگشت</a>
</div>