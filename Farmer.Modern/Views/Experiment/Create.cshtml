@model Farmer.Modern.Dto.ExperimentDto


@{
    ViewData["Title"] = "ثبت";
}

<div class="clearfix"></div>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    دسته بندی جدید
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form asp-action="Create" class="form-horizontal form-label-left">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Garden" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("Garden", null, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="Garden" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WaterMotor" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("WaterMotor", null, htmlAttributes: new {@class = "form-control col-md-7 col-xs-12"})
                        </div>
                        <span asp-validation-for="WaterMotor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Result" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Result" class="form-control col-md-7 col-xs-12"/>
                        </div>
                        <span asp-validation-for="Result" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label col-md-3 col-sm-3 col-xs-12"> </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Description" class="form-control col-md-7 col-xs-12">
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">بازگشت به لیست</a>
        </div>
    </div>
</div>


